{
  "version": "0.1.0",
  "command": "cargo",
  "isShellCommand": true,
  "tasks": [
    {
      "taskName": "build",
      "isBuildCommand": true,
      "showOutput": "always",
      "problemMatcher": {
        "owner": "rust",
        "fileLocation": ["relative", "${workspaceRoot}"],
        "pattern": [
          {
            "regexp": "(error|warning)(?:\\[(.*)\\])?: (.*)",
            "severity": 1,
            "code": 2,
            "message": 3
          },
          {
            "regexp": "-->\\s+([^:]*):(\\d+):(\\d+)",
            "file": 1,
            "line": 2,
            "column": 3
          }
        ]
      }
    },
    {
      "taskName": "clean",
      "showOutput": "always"
    },
    {
      "taskName": "build_for_test",
      "command": "cargo",
      "args": ["test", "--no-run"],
      "isTestCommand": true,
      "showOutput": "always",
      "problemMatcher": {
        "owner": "rust",
        "fileLocation": ["relative", "${workspaceRoot}"],
        "pattern": [
          {
            "regexp": "(error|warning)(?:\\[(.*)\\])?: (.*)",
            "severity": 1,
            "code": 2,
            "message": 3
          },
          {
            "regexp": "-->\\s+([^:]*):(\\d+):(\\d+)",
            "file": 1,
            "line": 2,
            "column": 3
          }
        ]
      }
    }
  ]
}
